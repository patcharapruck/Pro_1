<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Ed_text">
        <item name="android:singleLine">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">@dimen/margin_padding_10dp</item>
        <item name="android:paddingRight">@dimen/margin_padding_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="TextViewStyte">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewStyte2" parent="TextViewStyte">
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="TextViewStyte3" parent="TextViewStyte">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="button_menu">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_14sp</item>
        <item name="android:background">@color/white</item>
        <item name="android:layout_margin">@dimen/margin_padding_3dp</item>
    </style>

</resources>
