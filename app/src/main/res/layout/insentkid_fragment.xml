<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_padding_20dp"
        android:paddingRight="@dimen/margin_padding_20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="140dp"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="8dp"
                android:scaleType="centerInside"
                android:background="@color/black">

            </ImageView>

            <Button
                android:id="@+id/btnCaptureImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Capture Image" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_20dp"
                    android:paddingLeft="@dimen/margin_padding_10dp"
                    android:text="ืชื่อ" />

                <TextView
                    style="@style/TextViewStyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_20dp"
                    android:paddingLeft="@dimen/margin_padding_10dp" />

            </LinearLayout>


            <EditText
                android:id="@+id/baby_name"
                style="@style/Ed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_3dp"
                android:drawableLeft="@mipmap/ic_launcher_baby"
                android:drawablePadding="@dimen/margin_padding_10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />


            <TextView
                style="@style/TextViewStyte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10dp"
                android:paddingLeft="@dimen/margin_padding_10dp"
                android:text="เพศ" />


            <RadioGroup
                android:id="@+id/gender"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:checkedButton="@+id/rd_genderb"
                android:orientation="horizontal"
                android:layout_marginLeft="@dimen/margin_padding_10dp">

                <RadioButton
                    android:id="@+id/rd_genderb"
                    style="@style/TextViewStyte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_3dp"
                    android:drawablePadding="@dimen/margin_padding_10dp"
                    android:text="ชาย" />

                <RadioButton
                    android:id="@+id/rd_genderg"
                    style="@style/TextViewStyte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_3dp"
                    android:drawablePadding="@dimen/margin_padding_10dp"
                    android:text="หญิง" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/TextViewStyte"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_10dp"
                    android:paddingLeft="@dimen/margin_padding_10dp"
                    android:text="วันเกิด" />

                <TextView
                    style="@style/TextViewStyte2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_10dp"
                    android:paddingLeft="@dimen/margin_padding_10dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/baby_calendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_calendar" />

                <EditText
                    android:id="@+id/textviewdate"
                    style="@style/TextViewStyte"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_10dp"
                    android:layout_marginTop="@dimen/margin_padding_10dp"
                    android:layout_marginRight="@dimen/margin_padding_10dp"
                    android:gravity="center" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <TextView
                style="@style/TextViewStyte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10dp"
                android:paddingLeft="@dimen/margin_padding_10dp"
                android:text="น้ำหนักแรกเกิด(กิโลกรัม) *ถ้าทราบ" />

            <EditText
                android:id="@+id/baby_weight"
                style="@style/Ed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_3dp"
                android:drawableLeft="@mipmap/ic_weight"
                android:drawablePadding="@dimen/margin_padding_10dp"
                android:inputType="number" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />

            <TextView
                style="@style/TextViewStyte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10dp"
                android:paddingLeft="@dimen/margin_padding_10dp"
                android:text="ส่วนสูงแรกเกิด(เซนติเมตร) *ถ้าทราบ" />

            <EditText
                android:id="@+id/baby_height"
                style="@style/Ed_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_3dp"
                android:drawableLeft="@mipmap/ic_babyheight"
                android:drawablePadding="@dimen/margin_padding_10dp"
                android:inputType="number" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black" />


            <TextView
                style="@style/TextViewStyte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_10dp"
                android:paddingLeft="@dimen/margin_padding_10dp"
                android:text="หมู่เลือด*ถ้าทราบ" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:src="@mipmap/ic_blood" />

                <Spinner
                    android:id="@+id/baby_blood"
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown">

                </Spinner>

            </LinearLayout>

            <Button
                android:id="@+id/insertkid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/margin_padding_20dp"
                android:background="@color/orange"
                android:text="บันทึก"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_24sp"
                android:textStyle="bold|italic" />


        </LinearLayout>

    </RelativeLayout>

</ScrollView>