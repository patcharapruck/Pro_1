<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/blue">

        <ImageView
            android:id="@+id/imagepfk"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@color/white" />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/imagepfk"
            android:layout_marginLeft="@dimen/margin_padding_3dp"
            android:layout_toRightOf="@id/imagepfk"
            android:orientation="vertical">

            <Spinner
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_kid">
            </Spinner>

            <TextView
                android:id="@+id/namekid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/birthdaykid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_10dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/useremail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14sp" />

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_14sp" />

        </LinearLayout>


        <ImageButton
            android:id="@+id/logout"
            android:layout_width="30dp"
            android:layout_height="@dimen/margin_padding_30dp"
            android:src="@drawable/ic_logout"
            android:background="@color/red"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/margin_padding_10dp"/>

        <ImageButton
            android:id="@+id/setting"
            android:layout_width="30dp"
            android:layout_height="@dimen/margin_padding_30dp"
            android:src="@drawable/ic_settings"
            android:background="@color/orange"
            android:layout_toLeftOf="@id/logout"
            android:layout_alignTop="@id/logout" />

    </RelativeLayout>



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorbackground"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="@dimen/margin_padding_10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="การเจริญเติบโต"
                        android:textColor="@color/black"
                        android:textSize="@dimen/textsize_20sp"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/addbaby"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_padding_20dp"
                        android:background="@drawable/ic_action_add"/>


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_3dp"
                    android:text="ข้อมูลล่าสุด"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16sp"
                    android:textStyle="italic" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_10dp"
                    android:text="... เซนติเมตร"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ตามเกณฑ์"
                    android:textSize="@dimen/textsize_14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="#53f150"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_3dp"
                    android:text="... กิโลกรัม"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="ค่อนข้างมาก"
                    android:textSize="@dimen/textsize_14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="#ff9040"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_padding_3dp"
                    android:text="... ภาวะอ้วนผอม"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textsize_16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:text="อ้วน"
                    android:textSize="@dimen/textsize_14sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:background="#fc2121"/>


            </LinearLayout>



        </LinearLayout>

    </ScrollView>


</LinearLayout>